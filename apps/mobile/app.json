{
  "expo": {
    "name": "Scatty",
    "slug": "scatty",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "scatty",
    "userInterfaceStyle": "light",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFF9FB"
    },
    "assetBundlePatterns": ["**/*"],
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/favicon.png"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.scatty.app",
      "infoPlist": {
        "NSSpeechRecognitionUsageDescription": "Scatty needs access to speech recognition to understand your voice commands.",
        "NSMicrophoneUsageDescription": "Scatty needs access to your microphone to hear you.",
        "NSCameraUsageDescription": "Scatty needs access to your camera to see what you show it."
      }
    },
    "android": {
      "package": "com.scatty.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFF9FB"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.CAMERA"
      ]
    },
    "extra": {
      "eas": {
        "projectId": "YOUR_PROJECT_ID_HERE"
      }
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Scatty to access your camera to see what you show it."
        }
      ],
      [
        "@react-native-voice/voice",
        {
          "microphonePermission": "Allow Scatty to access your microphone to hear you.",
          "speechRecognitionPermission": "Allow Scatty to use speech recognition."
        }
      ],
      "./plugins/withAndroidManifestToolsReplace",
      "./plugins/withAndroidSupportExclusions"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "e00894d7-ae55-420e-980e-453362d2269e"
      }
    },
    "owner": "pavanpaik2025"
  }
}
